# ── hAIvemind Environment Configuration ──────────────────────────────────
# Copy this file to .env and adjust values as needed.
# All values shown are the defaults.

# ── Server ───────────────────────────────────────────────────────────────
PORT=3000
# DEMO=1                          # Enable mock/demo mode (same as --mock)

# ── Copilot CLI ──────────────────────────────────────────────────────────
COPILOT_CMD=copilot               # Path to GitHub Copilot CLI binary

# ── Concurrency & Limits ─────────────────────────────────────────────────
HAIVEMIND_MAX_CONCURRENCY=3       # Max parallel agents per session
HAIVEMIND_MAX_RETRIES=5           # Max total retries across agents
HAIVEMIND_MAX_CROSS_AGENT_LOOPS=3 # Max verify-fix loops

# ── Timeouts ─────────────────────────────────────────────────────────────
HAIVEMIND_AGENT_TIMEOUT_MS=300000           # Agent process timeout (5min)
HAIVEMIND_ORCHESTRATOR_TIMEOUT_MS=300000    # Orchestrator call timeout
HAIVEMIND_STALL_THRESHOLD_MS=90000          # Agent stall detection (90s)
HAIVEMIND_STALL_CHECK_INTERVAL_MS=30000     # Stall check interval (30s)

# ── Sessions ─────────────────────────────────────────────────────────────
HAIVEMIND_SESSION_RETENTION_MS=1800000      # Completed session TTL (30min)
HAIVEMIND_MAX_AGENT_OUTPUT_BYTES=102400     # Max output buffer per agent

# ── Backend ──────────────────────────────────────────────────────────────
HAIVEMIND_DEFAULT_BACKEND=copilot           # copilot | ollama
HAIVEMIND_OLLAMA_HOST=http://localhost:11434
HAIVEMIND_OLLAMA_MODEL=codellama

# ── Swarm ────────────────────────────────────────────────────────────────
HAIVEMIND_SWARM_ENABLED=false

# ── Plugins ──────────────────────────────────────────────────────────────
HAIVEMIND_PLUGINS_DIR=plugins
HAIVEMIND_PLUGINS_AUTOLOAD=true

# ── Logging ──────────────────────────────────────────────────────────────
LOG_LEVEL=info                    # error | warn | info | debug
LOG_FORMAT=pretty                 # pretty | json
